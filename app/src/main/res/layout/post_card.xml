<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/postimageimageviewid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/poststatustextviewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                    android:layout_gravity="right"
                    tools:text="Status"

                    />


                <TextView
                    android:id="@+id/posttexttextviewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    tools:text="Text"
                    />


                <ImageButton
                    android:id="@+id/postlocationimagebuttonid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="bottom"
                    android:text="Directions"
                    android:src="@drawable/ic_near_me_black_24dp"
                    android:background="@android:color/transparent"
                    />


                <TextView
                    android:id="@+id/postlocationtextviewid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="Location Description"
                    />




            </LinearLayout>



        </LinearLayout>




</androidx.cardview.widget.CardView>

